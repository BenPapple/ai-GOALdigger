use "../goaldiggerProlog" as knowledge.
use "../goaldiggerAction" as actionspec.

/**
 * Handles everything after an action has been chosen but before it is excuted because of timing(action stops thread) in any module
 *
 */

module postActionCleanup {

	% stops main execution
	if not(bel(haveMove)) then insert(haveMove).
	
	% stops debug timer
	if bel(lDebugOn) then canceltimer(calculationTimer).
	
} % end module