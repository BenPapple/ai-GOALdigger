use "../goaldiggerProlog" as knowledge.
use "../goaldiggerAction" as actionspec.

module handleMessageNeedDispenser {

	% Send stored dispensers to every connection that has asked this agent for them
	
	forall (SenderConnection).sent(messageNeedDispenser(BlockType,_)) do {
		if bel(storedDispenser(X,Y,dispenser,BlockType,_,Bool)), percept(name(MyName)) then 
			(SenderConnection).send(messageDispenser(X,Y,dispenser,BlockType,Bool,MyName)).
	}
	
}